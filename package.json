{
	"main": "./dist/extension.cjs",
	"module": "index.ts",
	"dependencies": {
		"@types/vscode": "^1.86.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/bun": "latest",
		"@vscode/vsce": "^2.23.0",
		"esbuild": "^0.20.0",
		"prettier": "3.3.3"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"type": "module",
	"scripts": {
		"dev": "echo 'Open this directory in VSCode and then run your extension with F5 or `Run and Debug > Run Extension`!'",
		"build": "bun run ./scripts/build-with-esbuild.ts",
		"watch": "bun run ./scripts/watch-with-esbuild.ts",
		"vsce-package": "bun run vsce package",
		"package": "bun run build && bun run vsce-package",
		"clean": "rm -r ./dist",
		"typecheck": "bun run tsc --noEmit",
		"prettier": "bunx prettier --write '**/*.md'",
		"prettier:check": "bunx prettier --check '**/*.md'",
		"format": "bunx biome format --write .",
		"format:check": "bunx biome format .",
		"lint": "bunx biome lint --write .",
		"lint:check": "bunx biome lint ."
	},
	"//": "START EXTENSION ATTRIBUTES",
	"name": "golangci-lint-updater",
	"version": "0.0.1",
	"description": "Extension description",
	"displayName": "Extension display name",
	"repository": {
		"type": "git",
		"url": "https://github.com/anttiharju/golangci-lint-updater"
	},
	"contributes": {
		"commands": [
			{
				"command": "bun-vscode-extension.helloworld",
				"title": "Hello World"
			}
		]
	},
	"engines": {
		"vscode": "^1.86.0"
	}
}
